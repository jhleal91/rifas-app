# Variables de entorno para Docker Compose - PRODUCCIÓN
# IMPORTANTE: Cambiar todos estos valores en producción

# Base de datos
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# JWT Secret
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_USE_STRONG_RANDOM_STRING

# Frontend URL
FRONTEND_URL=https://your-domain.com

# Email configuration
RESEND_API_KEY=your_production_resend_api_key
FROM_EMAIL=SorteoHub <noreply@your-domain.com>

# Grafana password
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# SSL certificates (si usas HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
