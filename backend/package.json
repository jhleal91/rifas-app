{
  "name": "rifas-backend",
  "version": "1.0.0",
  "description": "Backend API para sistema de rifas digitales",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs ecosystem.config.js",
    "pm2:status": "pm2 status",
    "docker:build": "docker build -t rifas-backend .",
    "docker:run": "docker run -p 5001:5001 rifas-backend",
    "docker:compose:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:compose:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "deploy:staging": "./deploy.sh staging",
    "deploy:production": "./deploy.sh production",
    "monitor:status": "./monitor.sh status",
    "monitor:logs": "./monitor.sh logs",
    "monitor:restart": "./monitor.sh restart",
    "monitor:health": "./monitor.sh health",
    "backup": "./monitor.sh backup",
    "cleanup": "./monitor.sh cleanup",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:setup": "node scripts/setup-test-db.js",
    "test:setup:complete": "node scripts/setup-test-db-complete.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "resend": "^6.2.2",
    "stripe": "^19.3.1"
  },
  "devDependencies": {
    "@sentry/node": "^10.25.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "winston": "^3.18.3"
  }
}
